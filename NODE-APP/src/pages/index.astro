---
import "@styles";
import Layout from '@layouts/Layout.astro';
import yyhLogo from '@assets/yinyanghouse-clinic-mn-logo-300.webp';
import chadPhoto from '@assets/chad-dupuis-acupuncturist-yinyanghouse-twin-cities-acupuncture-280.webp';
const pageData = {
	title: "Yin Yang House Twin Cities - Acupuncture and Wellness Center Minneapolis St Paul",
	date: "",
	slug: "",
	author: "",
	coverimage: "", 
	coveralt: "",
	parent: "",
	description: "Yin Yang House Twin Cities offers acupuncture, traditional Chinese medicine, and wellness services in Minneapolis and St. Paul. Expert care from Chad Dupuis, L.Ac.",
	ogImage: "",
	keywords: [
		"Yin Yang House Twin Cities",
		"acupuncture Minneapolis",
		"wellness center St Paul",
		"Chad Dupuis acupuncturist",
		"traditional Chinese medicine",
		"Tong Ren Therapy",
		"tuina massage",
		"qigong classes"
	],
	socialTitle: "Yin Yang House Twin Cities - Acupuncture & Wellness",
	socialDescription: "Professional acupuncture and wellness services in the Twin Cities. Traditional Chinese medicine for modern health.",
	layout: "",
}
---

<Layout thisPage={pageData} isArticle={false} isProduct={false}>
	<!-- Hero Section -->
	<section class="relative bg-gradient-to-r from-[#5cc4b5] to-[#4a9b8f] text-white py-20">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center mb-8">
				<div>
					<h1 class="text-4xl lg:text-5xl font-bold mb-2">
						Yin Yang House
					</h1>
					<p class="text-lg text-gray-200">
						Twin Cities Acupuncture and Wellness Center
					</p>
				</div>
				<div class="bg-[#f5f1e8] p-4 rounded-lg shadow-2xl">
					<img
						src={yyhLogo.src}
						alt="Yin Yang House Clinic Logo"
						class="w-32 h-32 lg:w-40 lg:h-40 object-contain"
					/>
				</div>
			</div>
			<div class="text-center">
				<p class="text-xl mb-8 text-gray-100 max-w-3xl mx-auto">
					Chinese Medicine, Acupuncture, and wellness services in Minneapolis.  Helping people of all ages with a wide variety of issues since 2004.
				</p>
				<div class="flex justify-center gap-4">
					<a href="/services/" class="inline-block bg-[#7BBF67] hover:bg-[#679F5A] text-white px-8 py-3 rounded-lg font-semibold transition">
						Our Services
					</a>
					<a href="/appointments" class="inline-block border-2 border-white text-white hover:bg-white hover:text-[#5cc4b5] px-8 py-3 rounded-lg font-semibold transition">
						Book Appointment
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- About Preview -->
	<section class="py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div>
					<h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Meet Chad Dupuis, L.Ac.</h2>
					<p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
						With over 20 years of experience, Chad has helped his many thousands of patients achieve better health through Acupuncture and Chinese Herbal Medicine. 
						He utilizes a range of techniques tailored to each individual with an ultimate emphasis on self-healing.
					</p>
					<a href="/chad-dupuis-acupuncturist-minneapolis/" class="inline-block bg-[#5cc4b5] hover:bg-[#4a9b8f] text-white px-6 py-3 rounded-lg font-semibold transition">
						Learn More About Chad
					</a>
				</div>
				<div class="text-center">
					<div class="w-64 h-64 mx-auto mb-4 overflow-hidden rounded-full shadow-lg">
						<img
							src={chadPhoto.src}
							alt="Chad Dupuis, Licensed Acupuncturist"
							class="w-full h-full object-cover"
						/>
					</div>
					<p class="text-gray-600 dark:text-gray-300 italic">"Sunshine will overthrow the storm, evoking smiles again" -- a poem by Chad's teacher, <a href="https://www.tamhealing.com/about-us/">Master Tom Tam</a></p>
				</div>
			</div>
		</div>
	</section>
</Layout>
